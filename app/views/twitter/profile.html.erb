<p>Twitter Profile</p>


  <table class="table table-striped table-bordered table-condensed">
  <tr> 
   <td>Name</td>
   <td><%= image_tag(@user[0]['profile_image_url']).html_safe %> <%= link_to(@user[0]['name'], @user[0]['url']) %></td>
   </tr>
    <% unless @user[0]['location'].blank? %>
    <tr>
      <th>
        Location
      </th>
      <td>
        <%= @user[0]['location'] %>
      </td>
    </tr>
    <% end %>
    <tr>
      <th>
      Friends
      </th>
      <td>
        <%= @user[0]['friends_count'] %>
      </td>
    </tr>
    <tr>
      <th>
        Followers
      </th>
      <td>
        <%= @user[0]['followers_count'] %>
      </td>
    </tr>
  </table>
  
  
  <% unless @status.blank? %>
  <p>
   
    <b>Status:</b>  <p><%= @status.text.split("http://")[0] %></p>
    
     <%if @status.text.split("http://")[1].present? %>  <p> Link:  <a href='http://<%=@status.text.split("http://")[1] %>'>http://<%=@status.text.split("http://")[1] %></a></p>
	   
	   <% end %>
    
  </p>
  <%end%>
  
    
