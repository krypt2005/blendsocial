<!DOCTYPE html>
<html>
<head>
  <title>Blendwith</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    "bootstrap" %>
   
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <%= stylesheet_link_tag    "bootstrap-responsive" %>
    

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="/assets/ico/favicon.ico">

    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/assets/ico/apple-touch-icon-57-precomposed.png">

</head>
<body>

<% if current_user %>

<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a href="/" class="brand">Blend With</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
                  
                            <li class="active"><%= link_to 'Profile', current_user %></li>
                            <li ><%= link_to 'SignOut', '/sign_out' %></li>

                        </ul>
         </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    

  <% else %>

<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a href="#" class="brand">Blend With</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
                        <ul class="nav">
    <li class="active"> <%= link_to 'Login with Facebook', '/auth/facebook/' %>

              <li class="active"><a href="/twsignin">Login With Twitter</a></li>
          
             
    </li>
     </ul>
         </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
                   
   
<%end%>
<% if current_user %>
<div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
          
            <ul class="nav nav-list">
              <li class="nav-header">Facebook</li>
               <% if !session[:resttoken].present? %>
               <li class="<% if request.fullpath == '/auth/facebook' %>active<% end %>"><a href="/auth/facebook">Login</a></li>
              <%else%>
              <li class="<% if request.fullpath == '/fbprofile' %>active<% end %>"><a href="/fbprofile">Profile</a></li>
              <li class="<% if request.fullpath == '/fbphotos' %>active<% end %>"><a href="/fbphotos">Photos</a></li>
              <%end%>
              <li class="nav-header">Twitter</li>
              <% if !session['access_token'].present? %>
              <li class="<% if request.fullpath == '/twsignin' %>active<% end %>"><a href="/twsignin">Login</a></li>
              <%else%>
              <li class="<% if request.fullpath == '/twprofile' %>active<% end %>"><a href="/twprofile">Profile</a></li>
              <li class="<% if request.fullpath == '/tweets' %>active<% end %>"><a href="/tweets">Tweets</a></li>
              <% end %>
              <li class="nav-header">Youtube</li>
                <li class="<% if request.fullpath == '/youtube/new' %>active<% end %>"><a href="/youtube/new">Login</a></li>
                <li class="<% if request.fullpath == '/youtube/show' %>active<% end %>"><a href="/youtube/show">Videos</a></li>
                <li class="<% if request.fullpath == '/uploadyoutube' %>active<% end %>"><a href="/uploadyoutube">Upload</a></li>
               <li class="nav-header">Picasa</li>
               <li class="<% if request.fullpath == '/picasa/new' %>active<% end %>"><a href="/picasa/new">Login</a></li>
               <li class="<% if request.fullpath == '/picasaphotos' %>active<% end %>"><a href="/picasaphotos">Photos</a></li>
                       
               <li class="nav-header">Instagram</li>
               <li class="<% if request.fullpath == '/instagram/new' %>active<% end %>"><a href="/instagram/new">Login</a></li>
               <li class="<% if request.fullpath == '/feed' %>active<% end %>"><a href="/feed">Photos</a></li>
               
               <li class="nav-header">Soundcloud</li>
               <li class="<% if request.fullpath == '/soundcloud/new' %>active<% end %>"><a href="/soundcloud/new">Login</a></li>
               <li class="<% if request.fullpath == '/songs' %>active<% end %>"><a href="/songs">Soundcloud Songs</a></li>
              </ul>
              
</div>
</div> <% end %>
              <div class="span9">
            <div class="container">
			<%= yield %>
			  </div>
			  </div>
            </div>

</body>
</html>
